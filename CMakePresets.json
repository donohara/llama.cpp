{
  "version": 4,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "LLAMA_BUILD_EXAMPLES": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_INSTALL_RPATH": "$ORIGIN;$ORIGIN/.."
      }
    },
    {
      "name": "mac-arm64",
      "hidden": true,
      "architecture": {
        "value": "arm64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "GGML_METAL": "ON",
        "GGML_METAL_MACOSX_VERSION_MIN": "13.0",
        "GGML_NATIVE": "ON"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mac-optimized-debug",
      "inherits": ["base", "mac-arm64", "debug"],
      "cacheVariables": {
        "GGML_ALL_WARNINGS": "ON",
        "GGML_SANITIZE_THREAD": "OFF",
        "GGML_SANITIZE_ADDRESS": "OFF"
      }
    },
    {
      "name": "mac-optimized-release",
      "inherits": ["base", "mac-arm64", "release"],
      "cacheVariables": {
        "GGML_ALL_WARNINGS": "OFF",
        "CMAKE_C_FLAGS_RELEASE": "-O3",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3",
        "GGML_METAL_EMBED_LIBRARY": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "mac-optimized-debug",
      "description": "Builds the project in Debug mode for macOS ARM64",
      "jobs": 12
    },
    {
      "name": "build-release",
      "configurePreset": "mac-optimized-release",
      "description": "Builds the project in Release mode for macOS ARM64",
      "jobs": 12
    }
  ]
}
